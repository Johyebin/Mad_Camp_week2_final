<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_id"
    android:background="?android:selectableItemBackground"
    android:layout_width="310dp"
    android:layout_height="440dp"
    android:layout_margin="25dp"
    cardview:cardCornerRadius="20dp">

    <LinearLayout
        android:id="@+id/cardview_front"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="#FFFFFF"
        android:visibility="visible">
        <androidx.cardview.widget.CardView
            android:paddingLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="270dp"
            cardview:cardCornerRadius="10dp"
            cardview:cardUseCompatPadding="false">
            <ImageView
                android:id="@+id/card_img_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/card_profile"
                android:scaleType="fitCenter"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/card_name"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#555555"
            android:textSize="20sp"
            android:text="Name"/>
        <TextView
            android:id="@+id/card_age"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#555555"
            android:textSize="20sp"
            android:text="Age"/>
        <TextView
            android:id="@+id/card_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#555555"
            android:textSize="20sp"
            android:text="Birth"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/cardview_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="#FFFFFF">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            cardview:cardCornerRadius="15dp"
            cardview:cardUseCompatPadding="false">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9ddcce"
                android:scaleType="fitCenter"
                android:paddingTop="45dp"
                android:paddingHorizontal="40dp"
                android:src="@drawable/icon_card"
                android:visibility="visible"/>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

</androidx.cardview.widget.CardView>
